{
	"name": "WebGL Ripper",
	"description": "Allows you to rip models and textures from WebGL applets",
	"author": "Rilshrink",
	"version": "0.6",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["index.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"web_accessible_resources": [{
		"resources": ["webglripper.js", "jszip.min.js"],
		"matches": ["<all_urls>"]
	}],
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"host_permissions": {
		"https://*/*",
		"http://*/"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"storage"
	],
	"browser_specific_settings": {
	  "gecko": {
		"id": "rilshrink@webglripper"
	  }
	}
}
